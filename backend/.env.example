# Certificate-based authentication (RECOMMENDED)
AZURE_SPN_CLIENT_ID=your_service_principal_client_id
AZURE_TENANT_ID=your_tenant_id
AZURE_CERT_PATH=cert/apim-exp.pem  # Path to certificate file (relative to backend dir)
USER_SID=1792420  # Optional user SID for tracking

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-2024-08-06

# Alternative: API Key authentication (if not using certificate)
# AZURE_OPENAI_API_KEY=your_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true

# Choose authentication method: 'certificate' or 'api_key'
AUTH_METHOD=certificate